-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
      %tbody
        - @movies.each do |movie|
          %tr
            %td= movie.title
            %td= movie.rating
            %td= movie.release_date

-# add to end of index.html.haml

= link_to 'Add new movie', new_movie_path
